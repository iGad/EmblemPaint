<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:EmblemPaint.ViewModel"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:view="clr-namespace:EmblemPaint.View">
    <DataTemplate DataType="{x:Type viewModel:ResultViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <!--11-->
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"></Image>

            <Image Grid.Row="1" Grid.Column="0" Margin="20" Source="{Binding Path=ResultImage}"></Image>
            <Image Grid.Row="1" Grid.Column="2" Margin="20" Source="{Binding Path=SourceImage}"></Image>
            <TextBlock Grid.Row="1" Grid.Column="1" FontWeight="Bold" FontStyle="Italic">vs</TextBlock>

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                
                <view:ResultChart 
                    Width="200" 
                    Height="200" 
                    StrokeThikness="0" 
                    BorderThickness="0" 
                    Foreground="#b14f4a"
                    StartAngle ="{Binding Path=StartAngle, Mode=OneWay}"
                    FillingAngle ="{Binding Path=FillingAngle, Mode=OneWay}">
                    <view:ResultChart.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#FFB3B3B3"/>
                    </view:ResultChart.Effect>
                </view:ResultChart>
                <Ellipse Fill="#E0E5E5E5" Width="140" Height="140"/>
                <TextBlock Text="{Binding Path=Result}" Margin="0,-10,0,0" FontWeight="Bold" Foreground="#b14f4a"></TextBlock>
                <TextBlock Text="Совпадений" Foreground="#FFA5A28E" Margin="0,30,0,0" FontSize="16"/>
            </Grid>

            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">Ваш результат!</TextBlock>
            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" FontSize="24">Lorem ipsum dolor. 
            <LineBreak/> Consectetur adipisicing elit.</TextBlock>
            <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">
                <StackPanel VerticalAlignment="Center">
                    <Button BorderBrush="#FFB4B4B4" 
                        Command="{Binding Path=HomeCommand}" 
                        CommandParameter="{StaticResource False}"
                        Width="100" Height="100"
                        BorderThickness="0">
                        <!--CommandParameter="{Binding ElementName=ResultWindow}"-->

                        <Image Source="../Images/Home.png" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Margin="20"/>

                    </Button>
                    <TextBlock Margin="5">В начало</TextBlock>
                </StackPanel>

            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>