<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:EmblemPaint.ViewModel"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:kernel="clr-namespace:EmblemPaint.Kernel;assembly=EmblemPaint.Kernel">
    <DataTemplate DataType="{x:Type viewModel:ResultViewModel}">
        <Grid>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseMove">
                    <kernel:RoutedEventToCommandMap Command="{Binding Path=ActionCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid.RowDefinitions>
                <!--11-->
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"></Image>

            <Image Grid.Row="1" Grid.Column="0" Margin="20" Source="{Binding Path=ResultImage}"></Image>
            <Image Grid.Row="1" Grid.Column="2" Margin="20" Source="{Binding Path=SourceImage}"></Image>
            <TextBlock Grid.Row="1" Grid.Column="1" FontWeight="Bold" FontStyle="Italic">vs</TextBlock>

            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                <TextBlock Text="{Binding Path=Result}" FontWeight="Bold" Foreground="#F0F00000"></TextBlock>
            </Grid>

            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">Ваш результат!</TextBlock>
            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" FontSize="24">Lorem ipsum dolor. 
            <LineBreak/> Consectetur adipisicing elit.</TextBlock>
            <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">
                <StackPanel VerticalAlignment="Center">
                    <Button BorderBrush="#FFB4B4B4" 
                        Command="{Binding Path=HomeCommand}" 
                        
                        Width="100" Height="100"
                        BorderThickness="0">
                        <!--CommandParameter="{Binding ElementName=ResultWindow}"-->

                        <Image Source="../Images/Home.png" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Margin="20"/>

                    </Button>
                    <TextBlock Margin="5">В начало</TextBlock>
                </StackPanel>

            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>