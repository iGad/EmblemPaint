                                <kernel:PushBindingManager.PushBindings>
                                    <kernel:PushBinding TargetProperty="ActualHeight" Path="BrushContainerHeight" Converter="{StaticResource DoubleToIntValueConverter}"/>
                                </kernel:PushBindingManager.PushBindings>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template" Value="{StaticResource ColorListViewItemTemplate}"></Setter>
                            <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}"></Setter>
                            <Setter Property="Width" Value="{Binding ElementName=ColorListView, Path=DataContext.(viewModel:PaintViewModel.BrushWidth)}"></Setter>
                            <Setter Property="Height" Value="{Binding ElementName=ColorListView, Path=DataContext.(viewModel:PaintViewModel.BrushHeight)}"/>
                        </Style>
                    </ListView.Resources>

                </ListView>

            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="1" Grid.Column="1">
                    <Button Grid.Column="0" 
                    Command="{Binding Path=BackCommand}"
                  
                    Content="{StaticResource BackButtonGrid}"/>  --><!--Height="50"
                    Width="150"--><!--
                </Viewbox>
                <Viewbox Grid.Row="1" Grid.Column="3">
                    <Button Grid.Column="1"
                       Command="{Binding Path=NextCommand}" 
                      
                       Content="{StaticResource CompleteButtonGrid}"/> --><!--Height="50"
                       Width="150"--><!--
                </Viewbox>
                

            </Grid>
        </Grid>-->
    </DataTemplate>
</ResourceDictionary>